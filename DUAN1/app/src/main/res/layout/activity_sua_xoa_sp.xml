<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".Activity_Sua_Xoa_SP" >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackXemTTPet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#EC52E9"
            android:textSize="18dp"
            android:layout_marginLeft="110dp"
            android:text="Xem thông tin" />
        <ImageView
            android:id="@+id/ivXoaPet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:srcCompat="@mipmap/xoa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:padding="0dp"
            app:cardCornerRadius="360dp"
            >
            <ImageView
                android:id="@+id/ivXemTTSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/auto"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btn_SuaHinhAnhSP"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/botron_button"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="sửa ảnh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:text="Mã Pet:" />

            <TextView
                android:id="@+id/txtSuaMaPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3F51B5"
                android:textSize="25dp"
                android:text="Mã pet"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:text="Tên Pet:" />

            <EditText
                android:id="@+id/et_inputSuaTenPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuổi (tháng):"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/et_inputSuaTuoiPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:text="Loại:" />

            <Spinner
                android:id="@+id/Spinner_LoaiPetSua"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:text="Giá:" />

    <EditText
        android:id="@+id/et_inputSuaGiaPet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        />
    <TextView
        android:id="@+id/txtTrangThai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ClearFormSuaPet"
            android:layout_width="120dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botron_button"
            android:text="Làm mới" />

        <Button
            android:id="@+id/btn_SuaPet"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botron_button"
            android:text="Cập Nhật" />
    </LinearLayout>

</LinearLayout>